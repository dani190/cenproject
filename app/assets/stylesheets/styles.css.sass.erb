//Var
$main-background-color: #FFF
$cencol-dark-grey: #444
$cencol-light-grey: #A0A0A0
$cencol-light-grey-2: #8D8D8D
$cencol-orange: #FFB404
$cencol-green: #007236
$cencol-red: #DB402C
$cencol-blue-1: #4F6376
$cencol-blue-2: #5E7185
$cencol-blue-3: #748699
$cencol-light-blue: #f2f2f3
$cencol-light-white: #FAFAFA
$cencol-light-white-2: #F3F3F3


//Font-face

@font-face
  font-family: "Myriad-web-pro-regular"
  src: url('MyriadWebPro.ttf')
  
@font-face
  font-family: "Myriad-web-pro-italic"
  src: url('MyriadWebPro-Italic.ttf')
  
@font-face
  font-family: "Myriad-web-pro-bold"
  src: url('MyriadWebPro-Bold.ttf')
  
@media all
  
  html,body
    width: 100%
    margin: 0
    padding: 0
    background: $main-background-color
    font-family: Myriad-web-pro-regular
    font-size: 14px
    
    a
      text-decoration: none
      color: $cencol-orange
    
    a:hover
      text-decoration: underline

    p
      font-family: Myriad-web-pro-regular
      color: $cencol-dark-grey
      font-size: 14px
      line-height: 20px
      
    h1
      font-family: Myriad-web-pro-regular
      font-size: 30px
      line-height: 10px
      color: $cencol-dark-grey
      font-weight: normal
      
    h3
      font-family: Myriad-web-pro-regular
      font-size: 15px
      line-height: 10px
      color: $cencol-dark-grey
      font-weight: normal
    
    h2
      color: $cencol-dark-grey
      font-weight: normal
      
  .site-title
    float: left
    margin: 40px 0 0 40px
      
  .green
    color: $cencol-green
    
  .green-text
    color: $cencol-green
    
  .red-text
    color: $cencol-red
    
  .error-icon
    float: left
    display: inline
    margin: 5px 15px 0 0
    
  .orange-hover:hover
    color: $cencol-orange !important
      
  .icon-size
    float: left
    font-size: 36px
    color: $cencol-dark-grey
    margin: 20px 50px 0 0

  .bold
    font-family: Myriad-web-pro-bold
    color: $cencol-dark-grey
    
  .navigation
    float: right
    width: 300px
    height: 165px
    //border-left: 1px solid $cencol-light-grey
    position: relative
    top: -138px
    text-align: right
    
  .nav-icon
    float: right
    font-size: 30px
    color: $cencol-dark-grey
    text-align: center
    line-height: 60px
    z-index: 6
  
  .nav-button-container
    float: right
    width: 99px
    height: 82px
    border-left: 1px solid $cencol-light-grey
    border-bottom: 1px solid $cencol-light-grey
    
    p
      float: right
      z-index: 3
      width: 100%
      height: 35px
      text-align: center
      vertical-align: middle
      line-height: 15px
      margin-top: -35px
      font-size: 14px
      
    a
      float: left
      width: 100%
      height: 100%
      z-index: 4
      text-decoration: none !important
    
    a:hover
      color: $cencol-orange
      
  .nav-button
    color: $cencol-dark-grey
    text-align: center
    
  .body-style-1
    float: left
    width: 840px
    margin: 30px 50px 0 50px
    padding-bottom: 200px
    
  .admin-button-type-1
    float: left
    padding: 8px 15px 8px 15px
    border-radius: 3px
    border: none
    background: $cencol-dark-grey
    color: $cencol-light-white
    font-size: 12px
    margin-left: -1px
    cursor: pointer
    
  .admin-button-type-1:hover
    text-decoration: none
    
  .admin-button-type-2
    float: right
    width: 100px
    height: 20px
    background: $cencol-light-grey-2
    border-radius: 3px
    color: #FFF
    text-align: center
    line-height: 1.7em
    vertical-align: middle
    position: relative
    top: 5px
    right: 25px
    font-size: 12px
    margin-right: 15px
    
  .admin-button-type-2:hover
    text-decoration: none
    
  .admin-button-type-3
    float: left
    padding: 8px 15px 8px 15px
    border-radius: 3px
    border: none
    background: $cencol-dark-grey
    color: $cencol-light-white
    font-size: 12px
    margin: 40px 0 0 40px
  
  .admin-button-type-3:hover
    text-decoration: none
    
  #header
    width: 100%
    height: 196px
    background: url(header-bg.png)
    position: relative
    top: 0
  
  #header-container
    float: left
    width: 940px
    height: 165px
    padding: 0, 10px, 0, 10px
    margin: 0 auto 0px auto
    border-bottom: 1px solid $cencol-light-grey
    
  #logo
    float: left
    width: 53px
    height: 165px

  #content
    width: 940px
    margin: 0px auto
    padding:  0, 10px, 0, 10px
    border: 1px solid #959595
    background: $main-background-color
    position: relative
    top: -167px
    
  .container-type-1
    float: left
    width: 830px
    padding: 20px 55px 0 55px
    margin-bottom: 200px
    
  .form-links
    float: left
    width: 100%
    margin-top: 10px
    font-size: 12px
    
  .input-container
    width: 350px
    height: 34px
    border: 1px solid $cencol-light-grey-2
    border-radius: 3px
    margin-bottom: 10px
    display: block
  
    label
      float: left
      width: 66px
      height: 34px
      background: $cencol-light-grey-2
      font-family: Myriad-web-pro-regular
      font-size: 12px
      text-align: center
      vertical-align: middle
      text-transform: lowercase
      line-height: 2.9em
      color: #FFF
  
    input
      float: left
      width: 260px
      height: 20px
      position: relative
      top: 7px
      left: 10px
      outline-color: $main-background-color
      border: none
      font-family: Myriad-web-pro-regular
      font-size: 15px
      
      
  .alerts-banner
    float: left
    width: 100%
    height: 36px
    background: $cencol-green
  
    p
      font-family: Myriad-web-pro-regular
      font-size: 12px
      color: $cencol-light-white
      margin: 8px 0 0 0
      text-align: center
  
  .green
    background-color: $cencol-green
  
  .red
    background-color: $cencol-red
    
  .sign-out-button
    float: right
    padding: 8px 15px 8px 15px
    border-radius: 3px
    border: none
    background: $cencol-dark-grey
    color: $cencol-light-white
    font-size: 12px
    position: relative
    right: 50px
    top: 30px

  .sign-out-button:hover
    text-decoration: none
    
  .admin-form
    float: left
    
  .date-info
    float: left
    width: 70%
    position: relative
    left: 40px
    top: 15px
    
  .bold
    font-family: Myriad-web-pro-bold
    top: -1px !important
    
  .admin-table
    float: left
    width: 100%
    border-top: 1px solid $cencol-light-grey
    border-left: 1px solid $cencol-light-grey
    border-right: 1px solid $cencol-light-grey
    margin-top: 10px
  
  .admin-table-header
    float: left
    height: 40px
    width: 100%
    border-bottom: 1px solid $cencol-light-grey
    
  .admin-table-line-item
    float: left
    width: 100%
    height: 30px
    border-bottom: 1px solid $cencol-light-grey
    
  .table-text
    float: left
    position: relative
    top: -7px
  
  .position-header
    float: inherit
    margin-left: 30px
    
  .position-text
    float: inherit
    margin-left: 30px
    min-width: 50px
    
    
  .department-header
    float: inherit
    margin-left: 20px
    min-width: 160px
    
  .department-text
    margin-left: 20px
    min-width: 160px
    
  .student-number-header
    float: inherit
    margin-left: 40px
    min-width: 180px
    
  .student-number-text
    float: inherit
    margin-left: 40px
    min-width: 180px
    
  .first-name-header
    float: inherit
    margin-left: 10px
    min-width: 140px
  
  .first-name-text
    float: inherit
    margin-left: 10px
    min-width: 140px
    
  .last-name-header
    float: inherit
    margin-left: 25px
    min-width: 140px
  
  .last-name-text
    float: inherit
    margin-left: 25px
    min-width: 140px
    
  .student-card-container
    float: left
    width: 400px
    height: 250px
    border: 1px solid $cencol-light-grey
    border-radius: 5px
    
  .card-image
    float: left
    width: 80px
    position: relative
    top: 20px
    left: 20px
    border: 1px solid $cencol-light-grey
    
    img
      width: 80px
      
  .admin-dropdown-type-1
    margin-left: 2px
    width: 280px
    height: 34px
    border: 1px solid #fff
    outline-color: #fff
    
  .department-name
    float: left
    margin: 30px 0 2px 0
    font-family: Myriad-web-pro-bold